<% layout('layouts/boilerplate') %>

<!-- Displaying everything in the grid  -->

<div class="row">
    <h1 class="text-center">New Campground </h1>
    <div class="col-6 offset-3">
          <!-- The title here is stored on the array named campground   -->
    <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <!-- Applying the required attribute below for validation via bootstrap class  -->
            <input class="form-control" type="text" id="title" name="campground[title]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        
        <div class="input-group mb-3">
            <input type="file" class="form-control" name="image" id="image" multiple>
        </div>

        <!-- Taking the file input here  -->
        <!-- <input type="file" class="form-file-input" id="image" name="image" multiple> -->

        <!-- Entering the image  -->
        <!-- <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="image" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div> -->

        <!-- Price Input  -->
        <div class="input-group mb-3">
            <label class="form-label" for="price">Campground Price:</label>

            <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" placeholder="0.00" aria-label="Username" name="campground[price]" aria-describedby="price-label" required>
            <div class="valid-feedback">
                Looks good!
            </div>
          </div>
        </div>
        

        <!-- Text description  -->
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        </div>

        <div class="mb-3">
            <button class="btn btn-success"> Add Campground</button>
        </div>
       


    </form>
    <a href="/campgrounds">All Campgrounds </a>
    </div>
</div>



